<h1>New game</h1>

<p> <%= @test %> </p>

<div class="list-letter">
  <% @letters.each do |letter| %>
  <div class="case-letter">
    <p> <%= letter %> </p>
  </div>
  <% end %>
</div>
<div class="form">
<form action="/score" method="post">
  <label for="l_word">What is the longest word you can find?</label>
  <input id="l_word" type="text" name="l_word" placeholder="Answer">
  <input type="submit" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input id="letters" name="letters" type="hidden" value= <%= @letters.join %> />
</form>
</div>
